<resources>
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.VideoPlayer">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.VideoPlayer">
        <item name="windowActionBarOverlay">false</item>
        <item name="colorPrimary">@color/darkColorPrimary</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopViewStyle">
        <item name="android:background">@color/grayColor</item>
    </style>

    <style name="SeparatorStyle">
        <item name="android:background">@color/darkGrayColor</item>
    </style>
</resources>