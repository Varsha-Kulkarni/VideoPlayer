<resources>
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="Theme.VideoPlayer">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.VideoPlayer">
        <item name="windowActionBarOverlay">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PopViewStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SeparatorStyle">
        <item name="android:background">@color/lightGrayColor</item>
    </style>
</resources>